// C++
class Solution {
public:
    bool isAnagram(string s, string t) {
        if(s.length() != t.length()) return false;

        unordered_map<char,int> counter;

        for(char ch : s){
            counter[ch]++;
        }

        for(char ch : t){
            if(counter.find(ch) == counter.end() || counter[ch] == 0){
                return false;
            }
            counter[ch]--;
        }

        return true;
    }
};

// Python
class Solution:
    def isAnagram(self, s: str, t: str) -> bool:
        s = s.lower().replace(" ", "")
        t = t.lower().replace(" ", "")

        if len(s) != len(t):
           return False
    
        return sorted(s) == sorted(t)
        
