class Solution {
public:
    int reverse(int x) {
        long int original = x;
        long int reversed = 0;
        while(x != 0){
            long int digit = x % 10;
            if((reversed > INT_MAX/10) || (reversed < INT_MIN/10)) return 0;
            reversed = reversed*10+digit;
            x/=10;
        }
        return reversed;
    }
};
