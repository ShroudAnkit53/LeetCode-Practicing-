class Solution {
public:
    bool isHappy(int n) {
        int sum = 0;
        if(n == 1 || n == 7) return true;
        else if(n < 10) return false;
        else{
            while(n > 0){
               int b = n % 10;
               sum += pow(b, 2);
               n /= 10;
            }
            return isHappy(sum);
        }
    }
};
