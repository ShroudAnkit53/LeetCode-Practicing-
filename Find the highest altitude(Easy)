class Solution {
public:
    int largestAltitude(vector<int>& gain) {
        int maxAltitude = 0;
        int current = 0;
        for(int i = 0; i < gain.size(); i++){
            current += gain[i];
            maxAltitude = max(current, maxAltitude);
        }
        return maxAltitude;
    }
};
