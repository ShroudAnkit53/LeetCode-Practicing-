class Solution {
public:
    bool judgeSquareSum(int c) {
        long long left = 0, right = sqrt(c);
        while(left <= right){
            long long sum = pow(left,2)+pow(right,2);
            if(sum == c) return true;
            else if(sum < c) left++;
            else right--;
        }
        return false;
    }
};
