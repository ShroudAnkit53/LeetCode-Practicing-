class Solution {
public:
    int maximumProduct(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        
        int size = nums.size();

        int withMins = nums[0] * nums[1] * nums[size - 1];
        int withMaxs = nums[size - 3] * nums[size - 2] * nums[size - 1];

        return max(withMins, withMaxs);
    }
};
